{
  "name": "@wealthsimple/wealthsimple",
  "version": "1.0.0",
  "description": "A JavaScript client for the Wealthsimple API",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src/index.js --out-file build/wealthsimple.js",
    "lint": "eslint '**/*.js'",
    "retire": "retire --ignore dist",
    "test": "jest --watch",
    "test:all": "yarn retire && yarn lint && jest --runInBand"
  },
  "browser": {
    "fs": false
  },
  "dependencies": {
    "es6-promise": "^4.2.4",
    "isomorphic-fetch": "^2.2.1",
    "query-string": "^5.1.0",
    "snakecase-keys": "^1.1.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "dotenv": "^5.0.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "jest": "^22.4.2",
    "jest-runner-eslint": "^0.4.0",
    "prompt-sync": "^4.1.5",
    "retire": "^1.6.0"
  },
  "jest": {
    "projects": [
      {
        "displayName": "test"
      },
      {
        "displayName": "lint",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/**/*.js"
        ]
      }
    ]
  }
}
